#
# wm independent hotkeys
#

# Power
ctrl + alt + Down
	systemctl poweroff 
ctrl + alt + Right 
	systemctl suspend
ctrl + alt + Left 
	sleep 1 && xset dpms force off	
super + z
	notify-send $(date +%T)
ctrl + alt + @space
	xrandr --output eDP-1 --primary --mode 1920x1080 --rate 60 --auto --below HDMI-1-0   

ctrl + alt + v 
	xrandr --output eDP-1 --off

# terminal emulator
super + Return
	bspc rule -r Alacritty state=floating & alacritty -e /bin/fish	 
super + shift + Return 
	bspc rule -a Alacritty state=floating ; alacritty -e /bin/fish
super + y
	bspc rule -r Alacritty state=floating & alacritty -e btop

#kdeconnectd shortcuts
super + Up
	kdeconnect-cli -d $(kdeconnect-cli -a --id-only) --send-clipboard

#asusctl shortcuts
alt + F4
	asusctl profile -n;notify-send "$(asusctl profile -p | grep 'Active' | cut -d ' ' -f 4-)"

#nmcli
super + q
	nmcli device wifi rescan

#apps
super + b
	env GDK_DPI_SCALE=0.85 firefox
super + shift + b
	chromium
super + o
	prime-run $HOME/Games/osu.AppImage & bspc desktop -f ^5
super + shift + e
	bspc rule -a Thunar state=floating & thunar 
super + e
	bspc rule -r Thunar state=floating & thunar 

super + d
	discord
super + x
	cpupower-gui

super + i
	firefox --new-tab /home/paul/.local/share/Routine-CSE,ODD\ 24-25\ -\ updated.pdf 
